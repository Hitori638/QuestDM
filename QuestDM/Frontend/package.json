{
  "name": "questdm",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "description": "QuestDM - Interactive Storytelling Application",
  "author": "YourName",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "cross-env ELECTRON=true npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "pinia": "^2.2.6",
    "vue": "^3.5.13",
    "vue-router": "^4.4.5",
    "find-process": "^1.4.7",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "vite": "^6.0.1",
    "vite-plugin-vue-devtools": "^7.6.5"
  },
  "build": {
    "appId": "com.yourcompany.questdm",
    "productName": "QuestDM",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist_electron/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "extraResources": [
      {
        "from": "../Backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
